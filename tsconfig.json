  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strict":true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts", "tests/**/*.ts"
  ],
}
